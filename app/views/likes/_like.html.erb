<% if post.liked_by?(current_user) %>
  <%= link_to post_like_path(post_id: post.id, id: post.likes.ids), method: :delete, remote: true, id: :"like-button-#{post.id}", class: "count-like" do %>
    <i class="far fa-thumbs-up like-inactive"></i>役に立った！<%= post.likes.count %>件
  <% end %>
<% else %>
  <%= link_to post_likes_path(post_id: post.id), method: :post, remote: true, id: :"like-button-#{post.id}", class: "count-like" do %>
    <i class="far fa-thumbs-up like-active"></i>役に立った！<%= post.likes.count %>件
  <% end %>
<% end %>