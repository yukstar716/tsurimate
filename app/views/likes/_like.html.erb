<% if post.liked_by?(current_user) %>
  <%= link_to post_like_path(post), method: :delete, remote: true, id: :"like-button-#{post.id}" do %>
    <i class="far fa-thumbs-up"></i> 
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true, id: :"like-button-#{post.id}" do %>
    <i class="far fa-thumbs-up"></i>
  <% end %>
<% end %>
<div id="like-count">
  役に立った！<%= post.likes.count %>件
</div>