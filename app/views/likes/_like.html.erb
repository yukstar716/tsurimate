<% if post.liked_by?(current_user) %>
  <%= like_to post_like_path(post), method: :delete, remote: true do %>
    <i class="far fa-thumbs-up"></i>役に立ったよね！<%= post.likes.count %>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true do %>
    <i class="far fa-thumbs-up"></i>役に立った！<%= post.likes.count %>
  <% end %>
<% end %>