<!--返信ボタン-->
<% if user_signed_in? %>
  <%= form_with(model: [@post, comment, PostCommentReply.new], local: true) do |f| %>
    <div class="form-comment-reply">
      <%= f.text_area :content, class: "form-control", rows: 2 %>
        <%= button_tag type: "submit", class: "btn btn-success float-right mt-1" do %>
          <i class="far fa-comments"></i>返信
        <% end %>
      <% end %>
    </div>
<% end %>