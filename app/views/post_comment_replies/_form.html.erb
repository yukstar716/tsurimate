<!--返信ボタン-->
<% if user_signed_in? %>
  <%= form_with(model: [@post, @comment, @comment_replies], local: true) do |f| %>
    <div class="form-comment-reply">
      <%= f.text_area :content, class: "form-control", rows: 1 %>
        <%= button_tag type: "submit", class: "btn btn-success float-right mt-1" do %>
          <i class="far fa-comments"></i>返信する
        <% end %>
      <% end %>
    </div>
<% end %>